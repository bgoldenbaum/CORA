    <script>
        // Tab functionality
        function showTab(tabName) {
            // Hide all tab contents
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => content.classList.add('hidden'));
            
            // Remove active state from all tabs
            const tabs = document.querySelectorAll('.tab-button');
            tabs.forEach(tab => {
                tab.classList.remove('border-brand-orange-500', 'text-brand-orange-600');
                tab.classList.add('border-transparent', 'text-gray-500');
            });
            
            // Show selected tab content
            document.getElementById(`content-${tabName}`).classList.remove('hidden');
            
            // Add active state to selected tab
            const activeTab = document.getElementById(`tab-${tabName}`);
            activeTab.classList.remove('border-transparent', 'text-gray-500');
            activeTab.classList.add('border-brand-orange-500', 'text-brand-orange-600');
        }

        // Navigation functions
        function showDashboard() {
            alert('Navigating to Dashboard...');
        }

        function showApplicants() {
            alert('Navigating to Applicants page...');
        }

        // Action functions
        function exportData() {
            alert('Exporting Application Data\n\nThis would generate:\nâ€¢ Excel/CSV export of all applications\nâ€¢ Filtered data based on current view\nâ€¢ Assignment reports\nâ€¢ Status summaries');
        }

        function assignTags(applicantName) {
            alert(`Assigning tags for ${applicantName}\n\nThis would:\nâ€¢ Save counselor assignment\nâ€¢ Notify assigned counselor\nâ€¢ Set recommender contact\nâ€¢ Update application status\nâ€¢ Send confirmation emails`);
        }

        function viewApplication(applicantName) {
            alert(`Viewing application details for ${applicantName}\n\nThis would show:\nâ€¢ Complete application materials\nâ€¢ Personal statement and essays\nâ€¢ Transcripts and recommendations\nâ€¢ Application timeline\nâ€¢ Review history and comments`);
        }

        function approveApplication(applicantName) {
            alert(`Approving application for ${applicantName}\n\nThis would:\nâ€¢ Mark application as approved\nâ€¢ Move to submission queue\nâ€¢ Notify student of approval\nâ€¢ Update application status\nâ€¢ Prepare for final submission`);
        }

        function requestChanges(applicantName) {
            alert(`Requesting changes for ${applicantName}\n\nThis would:\nâ€¢ Send detailed feedback to student\nâ€¢ Specify required revisions\nâ€¢ Set revision deadline\nâ€¢ Update status to "Needs Revision"\nâ€¢ Schedule follow-up review`);
        }

        function followUp(applicantName) {
            alert(`Following up on ${applicantName}\n\nThis would:\nâ€¢ Send reminder to assigned counselor\nâ€¢ Check review status\nâ€¢ Update priority if needed\nâ€¢ Log follow-up action\nâ€¢ Set next reminder date`);
        }

        function viewSubmission(applicantName) {
            alert(`Viewing submission details for ${applicantName}\n\nThis would show:\nâ€¢ Submitted application package\nâ€¢ Submission confirmation\nâ€¢ Court/organization details\nâ€¢ Submission timeline\nâ€¢ Current status updates`);
        }

        function trackStatus(applicantName) {
            alert(`Tracking status for ${applicantName}\n\nThis would show:\nâ€¢ Current application status\nâ€¢ Interview schedules\nâ€¢ Decision timeline\nâ€¢ Communication history\nâ€¢ Next steps and deadlines`);
        }

        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            if (mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.remove('hidden');
            } else {
                mobileMenu.classList.add('hidden');
            }
        }

        // Initialize with Review tab active
        document.addEventListener('DOMContentLoaded', function() {
            showTab('review');
        });
    </script>
