        let currentView = 'list';
        let filteredApplicants = [...applicantsData];

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderApplicants();
        });

        // View switching functions
        function switchToListView() {
            currentView = 'list';
            document.getElementById('listView').classList.remove('hidden');
            document.getElementById('gridView').classList.add('hidden');
            document.getElementById('listViewBtn').classList.add('text-white', 'bg-brand-blue-600');
            document.getElementById('listViewBtn').classList.remove('text-gray-600', 'hover:text-gray-900');
            document.getElementById('gridViewBtn').classList.remove('text-white', 'bg-brand-blue-600');
            document.getElementById('gridViewBtn').classList.add('text-gray-600', 'hover:text-gray-900');
            renderApplicants();
        }

        function switchToGridView() {
            currentView = 'grid';
            document.getElementById('listView').classList.add('hidden');
            document.getElementById('gridView').classList.remove('hidden');
            document.getElementById('gridViewBtn').classList.add('text-white', 'bg-brand-blue-600');
            document.getElementById('gridViewBtn').classList.remove('text-gray-600', 'hover:text-gray-900');
            document.getElementById('listViewBtn').classList.remove('text-white', 'bg-brand-blue-600');
            document.getElementById('listViewBtn').classList.add('text-gray-600', 'hover:text-gray-900');
            renderApplicants();
        }

        // Filter function
        function filterApplicants() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const classYear = document.getElementById('classYearFilter').value;
            const status = document.getElementById('statusFilter').value;

            filteredApplicants = applicantsData.filter(applicant => {
                const matchesSearch = applicant.name.toLowerCase().includes(searchTerm) || 
                                    applicant.email.toLowerCase().includes(searchTerm);
                const matchesYear = !classYear || applicant.year === classYear;
                const matchesStatus = !status || applicant.status === status;
                
                return matchesSearch && matchesYear && matchesStatus;
            });

            renderApplicants();
        }

        // Render applicants based on current view
        function renderApplicants() {
            if (currentView === 'list') {
                renderListView();
            } else {
                renderGridView();
            }
        }

        // Render list view
        function renderListView() {
            const tbody = document.getElementById('applicantsTableBody');
            tbody.innerHTML = '';

            filteredApplicants.forEach(applicant => {
                const row = document.createElement('tr');
                row.className = 'hover:bg-gray-50 cursor-pointer';
                row.onclick = () => viewApplicantDetails(applicant.id);
                
                row.innerHTML = `
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <img class="h-10 w-10 rounded-full flex-shrink-0" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ccircle cx='50' cy='50' r='50' fill='${encodeURIComponent(applicant.color)}'/%3E%3Ctext x='50' y='55' text-anchor='middle' fill='white' font-size='32' font-family='Arial'%3E${applicant.avatar}%3C/text%3E%3C/svg%3E" alt="${applicant.name}">
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900">${applicant.name}</div>
                                <div class="text-sm text-gray-500">${applicant.email}</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${applicant.year}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${applicant.gpa}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${applicant.applications}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getStatusColor(applicant.status)}">
                            ${applicant.statusText}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="w-16 bg-gray-200 rounded-full h-2 mr-2">
                                <div class="bg-brand-blue-600 h-2 rounded-full" style="width: ${applicant.progress}%"></div>
                            </div>
                            <span class="text-sm text-gray-600">${applicant.progress}%</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button class="text-brand-blue-600 hover:text-brand-blue-500" onclick="event.stopPropagation(); viewApplicantDetails('${applicant.id}')">View</button>
                    </td>
                `;
                
                tbody.appendChild(row);
            });
        }

        // Render grid view
        function renderGridView() {
            const grid = document.getElementById('applicantsGrid');
            grid.innerHTML = '';

            filteredApplicants.forEach(applicant => {
                const card = document.createElement('div');
                card.className = 'bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow cursor-pointer';
                card.onclick = () => viewApplicantDetails(applicant.id);
                
                card.innerHTML = `
                    <div class="flex items-center space-x-4 mb-4">
                        <img class="h-12 w-12 rounded-full" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ccircle cx='50' cy='50' r='50' fill='${encodeURIComponent(applicant.color)}'/%3E%3Ctext x='50' y='55' text-anchor='middle' fill='white' font-size='32' font-family='Arial'%3E${applicant.avatar}%3C/text%3E%3C/svg%3E" alt="${applicant.name}">
                        <div class="flex-1 min-w-0">
                            <h3 class="text-lg font-medium text-gray-900 truncate">${applicant.name}</h3>
                            <p class="text-sm text-gray-500 truncate">${applicant.year} â€¢ GPA: ${applicant.gpa}</p>
                        </div>
                    </div>
                    
                    <div class="space-y-3">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Applications</span>
                            <span class="text-sm font-medium text-gray-900">${applicant.applications}</span>
                        </div>
                        
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Status</span>
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${getStatusColor(applicant.status)}">
                                ${applicant.statusText}
                            </span>
                        </div>
                        
                        <div>
                            <div class="flex items-center justify-between mb-1">
                                <span class="text-sm text-gray-600">Progress</span>
                                <span class="text-sm font-medium text-gray-900">${applicant.progress}%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2">
                                <div class="bg-brand-blue-600 h-2 rounded-full" style="width: ${applicant.progress}%"></div>
                            </div>
                        </div>
                        
                        <div class="pt-2 border-t border-gray-200">
                            <p class="text-xs text-gray-500">Last activity: ${applicant.lastActivity}</p>
                        </div>
                    </div>
                `;
                
                grid.appendChild(card);
            });
        }

        // Helper function to get status colors
        function getStatusColor(status) {
            const colors = {
                'interview': 'bg-green-100 text-green-800',
                'review': 'bg-yellow-100 text-yellow-800', 
                'submitted': 'bg-blue-100 text-blue-800',
                'needs-review': 'bg-orange-100 text-orange-800',
                'active': 'bg-gray-100 text-gray-800'
            };
            return colors[status] || 'bg-gray-100 text-gray-800';
        }

        // Action functions
        function viewApplicantDetails(applicantId) {
            const applicant = applicantsData.find(a => a.id === applicantId);
            if (applicant) {
                alert(`Viewing detailed profile for ${applicant.name}\n\nThis would show:\nâ€¢ Complete application history\nâ€¢ Current application status\nâ€¢ Academic performance details\nâ€¢ Interview schedules\nâ€¢ Communication history\nâ€¢ Recommendation letters\nâ€¢ Document uploads\nâ€¢ Progress timeline`);
            }
        }

        function exportApplicants() {
            alert('Exporting applicant data...\n\nThis would generate:\nâ€¢ CSV/Excel file with all applicant information\nâ€¢ Application status summary\nâ€¢ Progress reports\nâ€¢ Contact information\nâ€¢ Academic records (where permitted)');
        }

        function sendBulkMessage() {
            alert('Send bulk message to applicants...\n\nThis would allow you to:\nâ€¢ Select specific applicants or groups\nâ€¢ Compose email or SMS message\nâ€¢ Schedule delivery time\nâ€¢ Track message delivery and responses\nâ€¢ Use templates for common communications');
        }



        function showDashboard() {
            alert('Navigating to Dashboard...\n\nThis would return you to the main dashboard view with overview metrics and recent activity.');
        }

        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            if (mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.remove('hidden');
            } else {
                mobileMenu.classList.add('hidden');
            }
        }
