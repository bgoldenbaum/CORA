    <script>
        // Action functions
        function showApplicants() {
            alert('Navigating to Applicants page...\n\nThis would show the full applicants list with filtering and management options.');
        }

        function generateReport() {
            alert('Generating comprehensive report...\n\nThis would create:\n• Application statistics\n• Placement outcomes\n• Student progress analytics\n• Deadline summaries\n• Performance metrics');
        }

        function refreshData() {
            alert('Refreshing dashboard data...\n\nThis would:\n• Update all metrics\n• Refresh active applicants\n• Sync latest application statuses\n• Update team availability');
        }

        function viewActiveApplicants() {
            alert('Viewing all active applicants...\n\nThis would show:\n• Complete list of students currently applying\n• Application status for each\n• Filtering by track/program\n• Quick actions for each applicant');
        }

        function viewAllStudents() {
            alert('Viewing all students...\n\nThis would show:\n• Complete student directory\n• Academic information and GPAs\n• Activity status\n• Contact information\n• Application history');
        }

        function viewOpenApplications() {
            alert('Viewing all open applications...\n\nThis would show:\n• All available opportunities\n• Deadline information\n• Student interest levels\n• Application requirements\n• Manage postings');
        }

        function manageTeam() {
            alert('Managing career services team...\n\nThis would allow:\n• Edit team member information\n• Update availability schedules\n• Assign specialization areas\n• Manage contact information\n• Adjust workload distribution');
        }

        function viewCalendar() {
            alert('Opening calendar view...\n\nThis would show:\n• Full calendar interface\n• All deadlines and events\n• Interview schedules\n• Important dates\n• Reminder settings');
        }

        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            if (mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.remove('hidden');
            } else {
                mobileMenu.classList.add('hidden');
            }
        }
    </script>
